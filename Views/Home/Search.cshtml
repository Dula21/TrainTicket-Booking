@model TrainTicketBookingUI.Models.SearchViewModel

<div class="container">
    <h1 class="mt-5">Train Search</h1>

    @using (Html.BeginForm("SearchResults", "SystemTrain", FormMethod.Post, new { @class = "mt-4" }))
    {
        <div class="row">
            <div class="col-md-6">
                <label for="DateTime" class="form-label">Date and Time:</label>
                <input type="text" name="Date" id="DateTime" class="form-control" placeholder="yyyy-mm-dd HH:mm" pattern="\d{4}-\d{2}-\d{2} \d{2}:\d{2}" required>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-6">
                <label for="Start" class="form-label">From:</label>
                <input type="text" name="Start" id="Start" class="form-control" required>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-6">
                <label for="Destination" class="form-label">To:</label>
                <input type="text" name="Destination" id="Destination" class="form-control" required>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-6">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </div>
    }
</div>
